{
  "name": "gladys-server",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:test": "shx --silent rm -f gladys-test.db && shx echo Cleaned test database",
    "pretest": "npm run db-migrate:test",
    "test": "cross-env NODE_ENV=test ./node_modules/mocha/bin/mocha --recursive ./test/bootstrap.test.js \"./test/**/*.test.js\" --exit",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov npm test > coverage.lcov",
    "prettier": "prettier --write 'controllers/**/*.js' 'lib/**/*.js'",
    "eslint": "eslint api lib models migrations config utils test services index.js --ignore-pattern 'node_modules' ",
    "start": "nodemon index.js",
    "db-reset:dev": "cross-env NODE_ENV=development node_modules/.bin/sequelize db:migrate:undo:all",
    "db-migrate:dev": "cross-env NODE_ENV=development node_modules/.bin/sequelize db:migrate",
    "db-seed:dev": "cross-env NODE_ENV=development node_modules/.bin/sequelize db:seed:all",
    "db-migrate:test": "cross-env NODE_ENV=test node_modules/.bin/sequelize db:migrate",
    "jsdoc": "jsdoc lib/**/*.js -d jsdoc",
    "apidoc": "apidoc -i controllers/ -o apidoc/",
    "checkjs": "tsc --allowJs --checkJs --noEmit --lib ES5,ES2018 lib/**/*.js api/**/*.js services/**/*.js"
  },
  "author": "Pierre-Gilles Leymarie",
  "license": "MIT",
  "devDependencies": {
    "apidoc": "^0.17.7",
    "cross-env": "^5.2.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsdoc": "^4.1.0",
    "eslint-plugin-require-jsdoc": "^1.0.4",
    "jsdoc": "^3.5.5",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.2.0",
    "should": "^13.2.3",
    "shx": "^0.3.2",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "bcrypt": "^3.0.3",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "sqlite3": "^4.0.6",
    "tracer": "^0.9.8"
  }
}
